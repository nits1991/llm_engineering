    {
      "name": "Chat Completions",
      "item": [
        {
          "name": "Basic Chat Completion",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{OPENAI_API_KEY}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"model\": \"gpt-4o-mini\",\n  \"messages\": [\n    {\n      \"role\": \"system\",\n      \"content\": \"You are a helpful assistant.\"\n    },\n    {\n      \"role\": \"user\",\n      \"content\": \"What is the capital of France?\"\n    }\n  ],\n  \"temperature\": 0.7,\n  \"max_tokens\": 150\n}"
            },
            "url": {
              "raw": "https://api.openai.com/v1/chat/completions",
              "protocol": "https",
              "host": ["api", "openai", "com"],
              "path": ["v1", "chat", "completions"]
            },
            "description": "Basic chat completion with GPT-4o-mini"
          }
        },
