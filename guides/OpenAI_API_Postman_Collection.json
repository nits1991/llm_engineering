            "body": {
              "mode": "raw",
              "raw": "{\n  \"model\": \"gpt-4o-mini\",\n  \"messages\": [\n    {\n      \"role\": \"system\",\n      \"content\": \"You are a helpful assistant that outputs JSON.\"\n    },\n    {\n      \"role\": \"user\",\n      \"content\": \"Generate a user profile with name, age, and hobbies in JSON format.\"\n    }\n  ],\n  \"response_format\": { \"type\": \"json_object\" }\n}"
            },
            "url": {
              "raw": "https://api.openai.com/v1/chat/completions",
              "protocol": "https",
              "host": ["api", "openai", "com"],
              "path": ["v1", "chat", "completions"]
            },
            "description": "Force response to be valid JSON"
          }
        }
