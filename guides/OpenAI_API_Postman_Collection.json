        {
          "name": "Speech-to-Text (Transcription)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{OPENAI_API_KEY}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/audio.mp3",
                  "description": "Upload your audio file here"
                },
                {
                  "key": "model",
                  "value": "whisper-1",
                  "type": "text"
                },
                {
                  "key": "language",
                  "value": "en",
                  "type": "text",
                  "description": "Optional: ISO-639-1 language code"
                }
              ]
            },
            "url": {
              "raw": "https://api.openai.com/v1/audio/transcriptions",
              "protocol": "https",
              "host": ["api", "openai", "com"],
              "path": ["v1", "audio", "transcriptions"]
            },
            "description": "Transcribe audio to text. Upload an audio file in the Body > form-data section."
          }
        },
        {
          "name": "Speech-to-Text (Translation)",
          "request": {
            "method": "POST",
            "header": [
